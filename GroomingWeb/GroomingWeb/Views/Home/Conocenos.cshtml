    <!-- NUESTRO HORARIO -->
    <section>
        <h2 class="mb-3">¡Nuestro horario!</h2>

        <ul class="list-group list-group-flush fs-5">
            <li class="list-group-item">
                <strong>Martes a Viernes:</strong> 10:00 a.m. – 6:00 p.m.
            </li>
            <li class="list-group-item">
                <strong>Sábados:</strong> 8:00 a.m. – 5:30 p.m.
            </li>
        </ul>
